{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
